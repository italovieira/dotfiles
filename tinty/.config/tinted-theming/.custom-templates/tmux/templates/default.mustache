# Based in https://github.com/LawAbidingCactus/tmux-gruvbox-truecolor

### theme settings ###

# window separators
set-option -wg window-status-separator ""

# monitor window changes
set-option -wg monitor-activity on
set-option -wg monitor-bell on

# set statusbar update interval
set-option -g status-interval 1

### colorscheme ###

# change window screen colors
set-option -wg mode-style bg="#{{base09-hex}}",fg="#{{base01-hex}}"

# default statusbar colors (terminal bg should be #282828)
set-option -g status-style bg=terminal,fg="#{{base04-hex}}"

# default window title colors
set-option -wg window-status-style bg="#{{base01-hex}}",fg="#{{base03-hex}}"

# colors for windows with activity
set-option -wg window-status-activity-style bg="#{{base01-hex}}",fg="#{{base04-hex}}"

# colors for windows with bells
set-option -wg window-status-bell-style bg="#{{base01-hex}}",fg="#{{base09-hex}}"

# active window title colors
set-option -wg window-status-current-style bg="#{{base09-hex}}",fg="#{{base01-hex}}"

# pane border
set-option -g pane-active-border-style fg="#{{base09-hex}}"
set-option -g pane-border-style fg="#{{base01-hex}}"

# message info
set-option -g message-style bg="#{{base09-hex}}",fg="#{{base01-hex}}"

# writing commands inactive
set-option -g message-command-style bg="#{{base04-hex}}",fg="#{{base01-hex}}"

# pane number display
set-option -g display-panes-active-colour "#{{base09-hex}}"
set-option -g display-panes-colour "#{{base01-hex}}"

# clock
set-option -wg clock-mode-colour "#{{base09-hex}}"

# copy mode highlighting
%if #{>=:#{version},3.2}
    set-option -wg copy-mode-match-style "bg=#{{base04-hex}},fg=#{{base01-hex}}"
    set-option -wg copy-mode-current-match-style "bg=#{{base09-hex}},fg=#{{base01-hex}}"
%endif

# statusbar formatting
# "#{{base09-hex}}" MUST be in lowercase here (conflicts with statusline alias otherwise)
set-option -g status-left "#[bg=#{{base04-hex}}, fg=#{{base01-hex}}]#{?client_prefix,#[bg=#{{base09-hex}}],#[bg=#{{base04-hex}}]} #{session_name} "
set-option -g status-right "#[bg=#{{base01-hex}}, fg=#{{base03-hex}}] %Y-%m-%d %H:%M:%S #[bg=#{{base04-hex}}, fg=#{{base01-hex}}]#{?client_prefix,#[bg=#{{base09-hex}}],#[bg=#{{base04-hex}}]} #{host_short} "

set-option -wg window-status-current-format "#{?window_zoomed_flag,#[fg=default bold],#[fg=default]} #{window_index} #{window_name} "
set-option -wg window-status-format "#{?window_zoomed_flag,#[fg=default bold],#[fg=default]} #{window_index} #{window_name} "
